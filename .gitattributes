# exclude .gitignore and similar from the generated tarball
.git*           export-ignore
# exclude test files
test            export-ignore
# exclude other development files
install*        export-ignore
uninstall*      export-ignore
# exclude all firmware zip files from package builds (tracked by LFS)
*.zip           export-ignore
# track zip files with Git LFS
*.zip filter=lfs diff=lfs merge=lfs -text
test/**/*.jpg filter=lfs diff=lfs merge=lfs -text
test/**/*.jpeg filter=lfs diff=lfs merge=lfs -text
test/**/*.png filter=lfs diff=lfs merge=lfs -text
test/**/*.mp4 filter=lfs diff=lfs merge=lfs -text
test/**/*.mov filter=lfs diff=lfs merge=lfs -text
test/**/*.heic filter=lfs diff=lfs merge=lfs -text
test/**/*.360 filter=lfs diff=lfs merge=lfs -text
test/**/*.dng filter=lfs diff=lfs merge=lfs -text
test/**/*.insp filter=lfs diff=lfs merge=lfs -text
test/**/*.insv filter=lfs diff=lfs merge=lfs -text
test/**/*.lrv filter=lfs diff=lfs merge=lfs -text
test/**/*.thm filter=lfs diff=lfs merge=lfs -text
